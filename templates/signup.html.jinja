<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
     <link rel="stylesheet" href="/static/styles.css">
  </head>

    {% include "components/navbar.html.jinja"%}

  <body>
    <br>
    <br>
  <div class = "container mt-2">
    {%for message in get_flashed_messages() %}
        <div class="alert alert-info" role="alert">
            {{message}}
        </div>
    {% endfor %}
    <form action="/signin" method="post">
      
      <h4 class="card-title text-dark text-left ml-2 mt-4" >Name:</h4>
      <input type="text" class="form-control "  placeholder="Vilateé" name = "Name" required value="{{ request.form.get('name', '') }}">
      <br>
      
      <h4 class="card-title text-dark text-left ml-2" >Email:</h4>
      <input type="email" class="form-control" id="exampleFormControlInput1" name = "email" placeholder="vilateéessencee@email.com" required value="{{ request.form.get('email', '') }}">
      <br>
      
      <h4 class="card-title text-dark text-left ml-2" >Address:</h4>
      <input type="text" class="form-control "  placeholder="985 Harford Blvd" name = "address" required value="{{ request.form.get('address', '') }}">
      <br>
      
      <h4 class="card-title text-dark text-left ml-2" >Username:</h4>
      <input type="text" class="form-control "  placeholder="Phamtoms" name = "user_name"required value="{{ request.form.get('username', '') }}">
      <br>
      
      <h4 class="card-title text-dark text-left ml-2" >Password:</h4>
      <input type="password" class="form-control"  placeholder="Vilate293" name = "password"required>
      <br>
      
      <h4 class="card-title text-dark text-left ml-2" >Comfirm Password:</h4>
      <input type="password" class="form-control" name = "verify_password" required>
      <br>
      
      <div class="d-grid gap-2 col-4 mx-auto">
        <input class="btn btn-dark btn-lg" type="submit" value="Sign Up">
      </div>
      <br>
  </main>
</form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>