  <body>
    <form class="row g-4 m-auto text-center">
  <div class="col-sm-8">
    <label for="username" class="form-label">Username</label>
    <input name="user" type="text" class="form-control" id="username" placeholder="Username" required>
  </div>
  <div class="col-sm-8">
    <label for="password" class="form-label">Password</label>
    <input name="pass" type="text" class="form-control" id="inputUsername" placeholder="Password"required>
  </div>
  <div class="col-sm-8">
    <label for="confirm password" class="form-label">Confirm Password</label>
    <input name="conf" type="password" class="form-control" id="password" placeholder="Confirm Password" required>
  </div>
  <div class="col-sm-8">
    <label for="email" class="form-label">Email Address</label>
    <input name="emails" type="Email" class="form-control" id="password" placeholder="Email Address">
  </div>
  <div class="col-sm-8">
    <label for="address" class="form-label">Mailing Address</label>
    <input name="address" type="text" class="form-control" id="address" placeholder="Home Address">
  </div>
  <div class="col-sm-8">
    <label for="inputPhone" class="form-label">Phone Number</label>
    <input name="number" type="" class="form-control" id="confirmPassword" placeholder="xxx-xxx-xxxx">
  </div>
  <div class="col-sm-8">
    <button type="submit" class="btn btn-primary">Sign up</button>
  </div>
</form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>