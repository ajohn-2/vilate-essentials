<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Products</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
     <link rel="stylesheet" href="/static/styles.css">
  </head>
  <body>
    {% include "components/navbar.html.jinja"%}
    <h1 class="text-center">View Your Products</h1>
    <br>
    <br>
       <div class = "container">
      <div class = "row">
        <div class = "col-5">
          <img src="{{product['image']}}" class="rounded mt-auto p-5" alt="{{product['product']}}" height = "450px">
          <br>
          <br>
        </div>
        <div class = "col-4">
        <h1 class = "text-success"> {{product["product"]}}</h1>
        <h4 class = "text-success">Avg. Rating: {{average}}</h4>
        <br>
        <p class = "text-success">{{product["description"]}}</p>
        <br>
        </div>
        <div class = "col-3">
        <p class = "text-success">${{ "%.2f" | format( product["price"] )}}</p>
        <br>
        <br>
        </div>
      </div>
          <button type="button" class="fs-8 btn btn-dark w-7 text-center">Add to Cart</button>
    </div>

      <br>
      <br>

    {%for review in reviews %}
      <div class = "container">
        <div class = "row">

      <form method="post" action = "/product/{{product['id']}}/reivew"></form>
        <h4>Review This Product</h4>
          <div class="form-floating">
            <textarea name="reviewproduct" maxlength="80" class="form-control" placeholder="Review" id="floatingTextarea2" style="height: 50px" style="width:30px"></textarea>
          </div>
        <br>
        <h4>Rate This Product</h4>
          <div class="form-floating">
            <input type="int" id="Ratings" class="form-control" aria-label="Review" min="1" max="5" style="height:50px" style="width: 30px">
          </div>
        <br>
          <div class="col-auto">
            <button type="submit" class="btn btn-dark">Submit Review</button>
          </div>
        
          <div class="card" style="width: 18rem;">
            <div class="card-body">
            <h5 class="card-title">{{Reviews["username"]}}</h5>
            <p class="card-text">{{review["comments"]}}</p>
            <p>{{review["timestamp"].strftime("%Y-%d-%m")}}</p>
          </div>
        </div>


    {% endfor %}



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>