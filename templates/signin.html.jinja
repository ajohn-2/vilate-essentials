<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Log In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
     <link rel="stylesheet" href="/static/styles.css">
  </head>
  <body>
   {% include "components/navbar.html.jinja"%}
  <br>
  <br>
  <h1 class="text-center">Vilateé Essence</h1>
  <br>
        <form>
            <h1 class= "mb-3 fw-normal text-center">Sign in </h1>
            <br>
             <div class = "container mt-2">
                {%for message in get_flashed_messages() %}
                    <div class="alert alert-info" role="alert">
                            {{message}}
                    </div>
                {% endfor %}
    <form action="/signin" method="post">
     <h4 class="card-title text-success text-left ml-2 mt-3">Username:</h4>
      <input type="text" class="form-control"  name="username" placeholder="Vilateé User" required value="{{ request.form.get('username', '') }}">
      <br>

      <h4 class="card-title text-success text-left ml-2" >Password:</h4>
      <input type="password" class="form-control"  name="password" placeholder="Password" required value="{{ request.form.get('password ', '') }}">
      <br>
        <div class="d-grid gap-2 col-4 mx-auto">
            <input class="btn btn-dark btn-lg" type="submit" value="Sign In">
        </div>
        <input name="send-to" value="" hidden>
    <br>
    <br>

    <h4 class = "text-dark text-center"> New Vilateé User? </h4>

    <br>

    <a class="btn btn-success btn-sm text-center" type="submit" value="Sign Up" href="/signup">Sign Up!</a>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
